.component-toast {
  position: fixed;
  z-index: 99999;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.5);
  opacity: 1;
  border-radius: 5px;
  padding: 10px 20px;
  color: white;
  font-size: 16px;
  font-weight: bold;
  transition: opacity 0.5s ease;

  &.hidden {
    opacity: 0;
  }
}