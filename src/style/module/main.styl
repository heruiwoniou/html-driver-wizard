.main {
  height: 'calc(100vh - %s)' % $mainFooterHeight;
  box-sizing: border-box;
  padding-top: $mainHeaderHeight;
  margin-top: - $mainHeaderHeight;
  background: backgroundColor;
  margin-left: 2px;
  margin-right: 2px;
  display: flex;
  flex-direction: column;
  overflow: hidden;

  .split-line {
    position: relative;
    width: ($mainHeaderHeight / 3);

    &:after {
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0), alpha(#ccc - 50%, 0.2), rgba(0, 0, 0, 0));
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 2px;
      left: 50%;
      transform: translateX(-50%);
    }
  }

  .toolbar {
    box-sizing: border-box;
    height: $toolBarHeight;
    background: ideColor;
    border-bottom: 1px solid borderColor;
    display: flex;

    [class*='toolbar'] {
      width: 'calc(50% - %s)' % ($mainHeaderHeight / 6);

      &.psd-toolbar {
        margin-left: ($mainHeaderHeight / 3);
      }
    }
  }

  .content {
    flex: 1;
    display: flex;
    // margin-left: ($mainHeaderHeight / 3);
    // margin-right: ($mainHeaderHeight / 3);
  }

  .html, .psd {
    overflow: hidden;
    width: 'calc(50% - %s)' % ($mainHeaderHeight / 6);
    position: relative;

    &.resize {
      &>* {
        display: none;
      }
    }
  }
}