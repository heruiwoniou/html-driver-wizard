.main {
  min-height: 'calc(100vh - %s)' % $mainFooterHeight;
  box-sizing: border-box;
  padding-top: $mainHeaderHeight;
  margin-top: - $mainHeaderHeight;
}

.main {
  margin-left: ($mainHeaderHeight / 3);
  margin-right: ($mainHeaderHeight / 3);
  display: flex;

  .split-line {
    position: relative;
    width: ($mainHeaderHeight / 3);

    &:after {
      background: linear-gradient(to bottom, rgba(0, 0, 0, 0), alpha(#ccc - 50%, 0.2), rgba(0, 0, 0, 0));
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      width: 2px;
      left: 50%;
      transform: translateX(-50%)
    }
  }

  .html, .source {
    width: 'calc(50% - %s)' % ($mainHeaderHeight / 6);

    &.resize {
      &>* {
        display: none;
      }
    }
  }

  .html {
    position: relative;
  }
}