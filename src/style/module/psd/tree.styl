.ts-psd-tree {
  position: relative;
  background-size: 100% auto;
  overflow: hidden;
  padding: 1px 0 0 1px;
  transform-origin: left top;

  .ts-psd-background {
    position: absolute;
    z-index: 0;
  }

  .ts-psd-children {
    position: absolute;
    z-index: 1;
  }

  .grab & {
    cursor: -webkit-grab;

    .ts-psd-children {
      display: none;
    }
  }

  .grabbing & {
    cursor: -webkit-grabbing;
  }

  .zoom & {
    cursor: -webkit-zoom-in;

    .ts-psd-children {
      display: none;
    }
  }

  .zoomIn & {
    cursor: -webkit-zoom-in;
  }
  .zoomOut & {
    cursor: -webkit-zoom-out;
  }
}